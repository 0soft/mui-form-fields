{
  "extends": [
    "tslint:recommended",
    "tslint-plugin-prettier",
    "tslint-config-prettier"
  ],
  "rules": {
    "max-line-length": { "options": 100 },
    "interface-name": false,
    "no-var-requires": false,
    "prettier": [true, ".prettierrc"]
  },
  "jsRules": {
    "max-line-length": { "options": [100] }
  }
}
