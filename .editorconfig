# Matches multiple files with brace expansion notation
# Set default charset
[*.js]
charset = utf-8

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true

# 2 space indentation
[*.{js,ts,jsx,tsx,html,scss,css}]
indent_style = space
indent_size = 2

# 2 space indentation
[{package.json, tsconfig.json tslint.json}]
indent_style = space
indent_size = 2
